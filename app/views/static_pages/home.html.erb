<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>  
   <div class="span9">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
     
    </div>
  </div>
<% else %>

  <div class="center hero-unit">
  <h1>Welcome to Repositme</h1>

  <h2>
    
  </h2>

  <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
</div>
<div class="center hero-unit">

<%= link_to image_tag("Reposit2.png", alt: "Reposit"), root_path %>
</div>
<% end %>